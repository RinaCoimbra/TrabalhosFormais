options
{
  JDK_VERSION = "1.5";
  static = true; 
  //LOOKAHEAD = 2;
}

PARSER_BEGIN(AWK)

public class AWK {
  public static void main(String args []) throws ParseException  {
    new AWK(System.in);
    System.out.println("Reading from standard input...");
    
    int ok = AWK.Begin();
    if (ok == 1) System.out.println("Ok!");
  }
}

PARSER_END(AWK)

SKIP :
{ " " | "\r" | "\t" | "\n" }

// -----------------------------------------------
// Tokens
// -----------------------------------------------

TOKEN :
{
  // Special patterns

    < BEGINFUNCAO: "BEGIN" >
  | < ENDFUNCAO:   "END" >

  // Comments

  | <COMMENT: ["#"](~["\n"])+>

  // Scope 

  | < ESCOPOFUNCAOB: "{"  >
  | < ESCOPOFUNCAOE: "}" >
  | < ESCOPOPARAMB: "(" >
  | < ESCOPOPARAME: ")" >

  // Parameters

  | < PARAM: "param" >

  // Actions

  | < IF: "if" >
  | < ELSE: "else" >
  | < WHILE: "while" >
}

// -----------------------------------------------
// Special patterns
// -----------------------------------------------

int Begin():    {}
{    
  (Comment())* <BEGINFUNCAO> EscopoFuncao() [<ENDFUNCAO> EscopoFuncao()] { return 1; }
}

// -----------------------------------------------
// Comments
// -----------------------------------------------

void Comment(): {}
{
  <COMMENT>
}

// -----------------------------------------------
// Parameters
// -----------------------------------------------

void Parameter(): {}
{
  <PARAM>
}

// -----------------------------------------------
// Scope
// -----------------------------------------------

void EscopoParam(): {}
{
  <ESCOPOPARAMB> (Parameter())+ <ESCOPOPARAME>
}

void EscopoFuncao(): {}
{
  <ESCOPOFUNCAOB> (Comment())* (If() | While())* <ESCOPOFUNCAOE> (Comment())*
}

// -----------------------------------------------
// Actions
// -----------------------------------------------

int If(): {}
{
  <IF> EscopoParam() EscopoFuncao() [<ELSE> EscopoFuncao()] { return 1; }
}

int While(): {}
{
  <WHILE> EscopoParam() EscopoFuncao() { return 1; }
}